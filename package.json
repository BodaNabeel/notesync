{
  "name": "note",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "db:generate": "pnpm --filter @note/db exec drizzle-kit generate",
    "db:migrate": "pnpm --filter @note/db exec drizzle-kit migrate",
    "db:push": "pnpm --filter @note/db exec drizzle-kit push",
    "dev:app": "pnpm --filter next-app dev",
    "dev:hono": "pnpm --filter hono-server dev",
    "build": "pnpm --filter next-app build",
    "start": "pnpm --filter next-app start",
    "lint": "eslint"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
