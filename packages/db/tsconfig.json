{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
